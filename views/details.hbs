<div class="container">
    <h1 class="my-4">Title : {{body.title}}
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="{{body.imageUrl}}" alt="{{body.title}}" />
        </div>

        <div class="col-md-4 text-center">
            <h4 class="my-3">Duration</h4>
            <p>{{body.duration}}</p>
            <h3 class="my-3">Description</h3>
            <p>{{body.description}}</p>

            {{#if body.isOwner}}
            <a class="btn btn-danger" href="/course/{{body._id}}/delete">Delete</a>
            <a class="btn btn-warning" href="/course/{{body._id}}/edit">Edit</a>
            {{else}}
            {{#if body.enrolled}}
            <span class="enrolled-span">You are already enrolled</span>
            {{else}}
            <a class="btn btn-primary" href="/course/{{body._id}}/enroll">Enroll</a>
            {{/if}}
            {{/if}}

        </div>
    </div>
</div>